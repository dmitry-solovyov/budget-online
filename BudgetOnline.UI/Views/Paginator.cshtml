@using BudgetOnline.UI.Models
@* Generator: MvcHelper *@
@functions {
}
@helper Render(PaginationModel model)
    {
        var id = string.IsNullOrWhiteSpace(model.Name) ? Html.GetUniqId(10) : model.Name;
        var pages = model.GetPages();
        var nextPageSize = model.PageSizes.FirstOrDefault(p => p > model.PageSize);
        if (nextPageSize == 0)
        {
            nextPageSize = model.PageSizes[0];
        }
    <div class="visible-xs clearfix darkback" style="height: 10px">
    </div>
    <div class="row-fluid darkback">
        <div class="col-md-5 col-md-offset-4 col-sm-4 col-sm-offset-2">
            <ul class="pagination pagination-sm pull-left">
                <li><a href="@Html.GetUrlQithNewQueryParameter("page", "1")">«</a></li>
                @foreach (var page in pages)
                {
                    if (model.Page == page)
                    {
                    <li class="active"><a href="#">@page</a></li>
                    }
                    else
                    {
                    <li><a href="@Html.GetUrlQithNewQueryParameter("page", @page.ToString())">@page</a></li>
                    }
                }
                <li><a href="@Html.GetUrlQithNewQueryParameter("page", model.PagesCount.ToString())">
                    »</a></li>
            </ul>
        </div>
        <div class="col-md-3 col-sm-6">
            <div style="margin-top: 10px" class="pull-right">
                <label class="">
                    Страница:
                </label>
                <div class="btn-group">
                    <button class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" href="@Html.GetUrlQithNewQueryParameter("pageSize", nextPageSize.ToString())">
                        @(model.PageSize)&nbsp;&nbsp;&nbsp; <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" id="setPageSize">
                        @foreach (var pageSize in model.PageSizes)
                        {
                            <li><a href="@Html.GetUrlQithNewQueryParameter("pageSize", pageSize.ToString())">@pageSize</a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix darkback">
    </div>
    <div class="darkback" style="height: 10px">
    </div>
}