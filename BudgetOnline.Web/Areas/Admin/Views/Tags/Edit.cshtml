    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}
<h4>
    Редактирование</h4>
<div class="container-fluid">
    @(Html.BudgetOnlineWeb()
    .Form(BudgetOnlineWebControls.FormTypes.Horizontal).ActionUrl(Url.Action("edit"))
    .Content(@<text>
