@using BudgetOnline.Web.Areas.Admin.Models
@using BudgetOnline.Web.Infrastructure.Controls
@model IEnumerable<PeriodTypeListViewModel>
@{
    ViewBag.Title = "Периоды";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}

@Html.BudgetOnlineWeb().PrimaryButton().Caption("Новая запись").RedirectTo(Url.Action("create")).Build()

@(Html.BudgetOnlineWeb()
    .Table<PeriodTypeListViewModel>()
    .Css("table table-striped")
    .Rows(Model)
    .Columns(columns =>
                {
                    columns.Icon().IconCss(m => m.IsDisabled ? "glyphicon-lock" : "").Span(1);
                    columns.Bound(m => m.Name).Span(7);
                    columns.Commands().Cell(m => m.Commands).Span(4);
                })
    .Build()
    )