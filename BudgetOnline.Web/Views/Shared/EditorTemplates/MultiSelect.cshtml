@model MultiSelectList
@{
	var placeholder = "";
	if (ViewData.ModelMetadata.AdditionalValues.ContainsKey("placeholder"))
	{
		placeholder = ViewData.ModelMetadata.AdditionalValues["placeholder"].ToString();
	}
	ModelState state = ViewData.ModelState[ViewData.ModelMetadata.PropertyName];
	//var value = Model ?? string.Empty;

	var css = new List<string> {"form-control"};

	if (state != null && state.Errors.Count > 0)
	{
		css.Add("input-validation-error");
	}
	if (!string.IsNullOrWhiteSpace(ViewData.ModelMetadata.GetSpan()))
	{
        css.Add(ViewData.ModelMetadata.GetSpan());
	}
}

<ul class="list">
	@foreach(var item in Model)
	{
		<li>
			<input id="Permissions_@(item.Value)" name="Permissions.@(item.Value)" type="checkbox" value="false"></input>
			@item.Text
		</li>
	}
</ul>
