@using BudgetOnline.UI.Extensions

@model BudgetOnline.UI.Models.IdWithSelectList

@{
    var state = ViewData.ModelState[ViewData.ModelMetadata.PropertyName];
    var cssClass = ViewData.ModelMetadata.GetSpan("");
    if (state != null && state.Errors.Count > 0)
    {
        cssClass += " input-validation-error";
    }

    if (Model.Items.Items.Any(o => !string.IsNullOrWhiteSpace(o.Icon)))
    {
        cssClass += " selectpicker";
    }
}
@BudgetOnline.UI.Views.Editors.SelectList.Render(Model.Items, ViewData.ModelMetadata.PropertyName, cssClass, false)
