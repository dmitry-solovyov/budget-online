@using System.Globalization
@model Decimal
@{
	var placeholder = "";
	if (ViewData.ModelMetadata.AdditionalValues.ContainsKey("placeholder"))
	{
		placeholder = ViewData.ModelMetadata.AdditionalValues["placeholder"].ToString();
	}
	
	ModelState state = ViewData.ModelState[ViewData.ModelMetadata.PropertyName];
	var value = Model.ToString(CultureInfo.CurrentUICulture);

	var cssClass = "col-md-8 data-type-numeric form-control";
	if (state != null && state.Errors.Count > 0)
	{
		cssClass += " input-validation-error";
	}
}

<div class="input-group">
	@Html.TextBox("", value, new { @class = @cssClass, placeholder, autocomplete = "off" })
	<span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
</div>
