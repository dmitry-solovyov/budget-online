@model string
@{
	var placeholder = "";
	if (ViewData.ModelMetadata.AdditionalValues.ContainsKey("placeholder"))
	{
		placeholder = ViewData.ModelMetadata.AdditionalValues["placeholder"].ToString();
	}
	ModelState state = ViewData.ModelState[ViewData.ModelMetadata.PropertyName];
}
@if (state != null && state.Errors.Count > 0)
{ 
	@Html.Password("", string.Empty, new { @class = "input-block-level input-validation-error", placeholder })
}
else
{
	@Html.Password("", string.Empty, new { @class = "input-block-level", placeholder }) 
}