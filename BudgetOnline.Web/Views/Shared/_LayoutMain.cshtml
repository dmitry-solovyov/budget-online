@using System.Web.Optimization
@using StackExchange.Profiling
@*@using StackExchange.Profiling;*@
<!DOCTYPE html>
<html>
<head>
    <title>Бюджет On-Line :: @ViewBag.Title</title>
    <meta charset="utf-8" lang="en" name="viewport" content="width=device-width, initial-scale=1.0" />
    @Styles.Render("~/content/css")
    @Scripts.Render("~/js")
</head>
<body>
    @Html.BudgetOnlineWeb().ProgressIndicator().BackgroundUrl(@Url.Content("~/Content/images/back1.jpg")).IndicatorUrl(@Url.Content("~/Content/images/ajax-loader.gif")).Class("progress-indicator").Build()
    <div class="container" id="container">
        <div class="row-fluid">
            <div class="span8">
                <!--
					<h4 class="muted">
						Budget online</h4> //-->
            </div>
            <div class="span2">
                @{ Html.RenderPartial("_LanguageSwitch"); }
            </div>
            <div class="span2" style="text-align: right;">
                @{ Html.RenderAction("LoggedOnName", "CurrentUser", new { Area = "" }); }
            </div>
        </div>
        <div class="row-fluid">
            @{Html.RenderPartial("~/Views/Shared/TopNavligationMenu.cshtml");}
        </div>
        <div class="row-fluid">
            <div class="span12">
                @RenderBody()
            </div>
        </div>
        <div class="row-fluid footer">
            <div class="span12 muted">
                <p class="text-center">
                    &copy; Company @DateTime.Now.Year</p>
            </div>
        </div>
    </div>
    @Scripts.Render("~/js2")
    @MiniProfiler.RenderIncludes(showTrivial: true, showTimeWithChildren: true, position: RenderPosition.Left)
    @RenderSection("Header", false)
    <script type="text/javascript"><!--
        $(function () {
            $('#language-switch ul.dropdown-menu li a').click(function (e) {
                e.preventDefault();
                var lang = $(this).attr('data-lang');
                changeLang(lang);
            });
        });
	//-->
    </script>
</body>
</html>
