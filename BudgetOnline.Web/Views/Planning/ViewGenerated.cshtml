@model List<BudgetOnline.Data.Manage.Types.Simple.TransactionTotal>
@{
    Layout = null;
}
<div class="row underline">
	<div class="col-md-6"></div>
    <div class="col-md-6"></div>
</div>
@foreach (var item in Model)
{
    <div class="row underline">
        <div class="col-md-6">@item.Date.Value.ToString("MMM yyyy")</div>
        <div class="col-md-6 @(item.Sum >= 0 ? "sum-in" : "sum-out")">@item.Sum @item.CurrencyName</div>
    </div>
}
