@using BudgetOnline.UI.Models.SelectItems
@model BudgetOnline.Web.ViewModels.Charts.ChartWithCategoriesViewModel
@{
}
@section Header
{
    <script src="@Url.Content("~/Scripts/Highcharts-4.0.1/js/highcharts.js")" type="text/javascript"></script>
}
<div class="darkback border-bt" style="padding-bottom: 1em">
<form method="POST">
    <div class="row" style="padding-top: 1em">
        <div class="col-md-2">
            <strong>Период</strong>
        </div>
        <div class="col-md-10">
            <div class="row">
                <div class="col-md-1">
                    <label class="control-label">
                        С</label></div>
                <div class="col-md-11">@Html.EditorFor(model => model.FromDate)
                </div>
            </div>
            <div class="row" style="padding-top: .5em">
                <div class="col-md-1">
                    <label class="control-label">
                        По</label></div>
                <div class="col-md-11">@Html.EditorFor(model => model.ToDate)</div>
            </div>
        </div>
    </div>
    <div class="row" style="padding-top: 1em">
        <div class="col-md-2">
            <strong>Категории</strong>
        </div>
        <div class="col-md-10">
            @(new BudgetOnline.UI.Views.Editors.MultiColumnSelectList().Render(Model.Categories, "Categories", "", true, 3))
        </div>
    </div>
    <div class="row" style="padding-top: 1em">
        <div class="col-md-10 col-md-offset-2">
            @Html.BudgetOnlineWeb().ButtonNormal().Caption("Выбрать").Build()
            <span style="padding-left: 3em">
                @Html.EditorFor(model => model.IsOnlyTotals)
            </span>
        </div>
    </div>
</form>
</div>
<div class="clearfix"></div>
@(Model.Chart)
